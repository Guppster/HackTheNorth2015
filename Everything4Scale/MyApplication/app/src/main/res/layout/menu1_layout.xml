<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bananas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DATA"
        android:id="@+id/txt"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />

    <Button
        android:id="@+id/angry_btn"

        android:text="Go Back"
        android:textColor="#000000"
        android:textSize="16dp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_alignTop="@+id/angry_btn2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txt" />

    <Button
        android:id="@+id/angry_btn2"

        android:text="Next"
        android:textColor="#000000"
        android:textSize="16dp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_above="@+id/angry_btn3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="131dp"
        android:layout_toEndOf="@+id/txt" />

    <Button
        android:id="@+id/angry_btn3"

        android:text="Submit Banana Fact"
        android:textColor="#000000"
        android:textSize="16dp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/angry_btn"
        android:layout_marginTop="45dp"
        android:layout_alignEnd="@+id/angry_btn3"
        android:layout_alignStart="@+id/angry_btn3" />

</RelativeLayout>